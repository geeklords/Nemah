<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error">
      <% pluralize(post.errors.count, "error") %>
  <% end %>
  <div class="wrapper">
   <div class="container mycontainer">
     <div class="form"> 
       <div class="avatar-wrapper">	
             <%= image_tag("groceries.png",:class => "avatar")%> 
       </div>
      <br>
      <br>
      <div class="form-group">
       <%= form.label :title %>
       <%= form.text_field :title ,:class => "form-control"%>
     </div>
      <div class="form-group">
       <%= form.label :type_of_food %>
       <%= form.text_field :type_of_food ,:class => "form-control" %>
     </div>
       <div class="form-group">
        <%= form.label :amount %>
         <%= form.number_field :amount , class: "form-control"%>
       </div>
       <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
      </div>
      <div class="actions">
        <%= link_to 'Back', posts_path, class: "btn btn-outline-secondary" %>
        <%= form.submit "Save",class: "btn btn-outline-success"%>
     </div>

<% end %>
  </div>
    </div>
      </div>
