<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
   <div class="form-group">
     <%= form.label :title %>
     <%= form.text_field :title ,:class => "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :type_of_food %>
      <%= form.text_field :type_of_food ,:class => "form-control" %>
    </div>
       <div class="form-group">
       <%= form.label :amount %>
       <%= form.number_field :amount , class: "form-control"%>
       </div>
       <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
</div>
  <div class="actions">
    <%= link_to 'Back', posts_path, class: "btn btn-outline-secondary" %>
    <%= form.submit "Save", data: { confirm: 'You Added A Post' },class: "btn btn-outline-success"%>
  </div>
  </div>
<% end %>
