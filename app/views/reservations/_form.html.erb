<%= form_with(model: reservation, local: true) do |form| %>
  
  <div class="wrapper">
   <div class="container mycontainer">
     <div class="form"> 
       <div class="avatar-wrapper">	
             <%= image_tag("groceries.png",:class => "avatar")%> 
       </div>
      <br>
      <br>
      <div class="form-group">
       <%= form.label :user_id %>
       <%= form.text_field :user_id ,:class => "form-control"%>
     </div>
      <div class="form-group">
       <%= form.label :post_id %>
       <%= form.text_field :post_id ,:class => "form-control" %>
     </div>
       <div class="form-group">
        <%= form.label :amount %>
         <%= form.number_field :amount , class: "form-control"%>
       </div>
       
      <div class="actions">

        <%= form.submit "Save", data: { confirm: 'You Added A Reservation' },class: "btn btn-outline-success"%>
     </div>

<% end %>
  </div>
    </div>
      </div>
