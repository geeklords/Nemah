<h1> Hello </h1>

 <div class="container">
    <div class="row">
      <% @reservations.each_with_index do |reservation| %>
      <div class="col-md-4 mt-2">
          <div class="card">
              <div class="card-block p-5">
                  <h4 class="card-title"><%= reservation.user_id %></h4>
                  <h6 class="card-subtitle text-muted">Post ID:: <%= reservation.post_id %></h6>
                  <h6 class="card-title text-muted">Amount: <%= reservation.amount %></h6>
              </div>
          </div>
      </div>
      <% end %>
    </div>
  </div>